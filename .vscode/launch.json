{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "start:debug", "--", "--inspect-brk"],
            "autoAttachChildProcesses": true,
            "restart": true,
            "sourceMaps": true,
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/notes-server"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Database",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["prisma", "studio"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/notes-server"
        },
        {
            "name": "Client Web SSR",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm run dev",
            "cwd": "${workspaceFolder}/notes-client-web"
        },
        {
            "name": "Client Web CSR",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:80",
            "cwd": "${workspaceFolder}/notes-client-web"
        },
        {
            "name": "Client Web Full",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm run dev",
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithEdge"
            },
            "cwd": "${workspaceFolder}/notes-client-web"
        },
        {
            "name": "Debug Android",
            "cwd": "${workspaceFolder}/notes-clientMobile",
            "type": "reactnative",
            "request": "launch",
            "platform": "android"
        }
    ],
    "compounds": [
        {
            "name": "Debug whole project",
            "configurations": ["Client Web Full", "Server", "Database"]
        }
    ]
}
